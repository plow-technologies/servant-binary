name:                servant-binary
version:             0.1.0.0
synopsis:            Servant content-type for binary
-- description:
homepage:            https://github.com/plow-technologies/servant-binary#readme
license:             BSD3
license-file:        LICENSE
author:              Kevin Cotrone
maintainer:          kevincotrone@gmail.com
copyright:           2017 Kevin Cotrone
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Servant.Binary
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , binary
                     , servant >=0.7 && <0.14
                     , http-media
                     , bytestring
                     , zlib

test-suite example
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs:
    example
  ghc-options: -Wall
  build-depends:
      base
    , bytestring
    , http-media
    , servant
    , binary
    , servant-binary
    , servant-server >=0.4.4.5
    , wai            >=3.0.3.0
    , warp           >=3.0.13.1
  default-language: Haskell2010

source-repository head
  type:     git
  location: https://github.com/plow-technologies/servant-binary
